           column="PRJE_SET_DESC" 
           jdbc-type="VARCHAR" />
           
        <field-descriptor
           name="active"
           column="ACTV_CD"
           jdbc-type="VARCHAR"
           conversion="org.kuali.rice.core.framework.persistence.ojb.conversion.OjbCharBooleanConversion" />
           
        <!-- Common Fields -->
        
        <field-descriptor
           name="objectId"
           column="OBJ_ID"
