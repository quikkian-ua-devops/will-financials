<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="BillingFrequencyMaintenanceDocument" parent="BillingFrequencyMaintenanceDocument-parentBean"/>

    <bean id="BillingFrequencyMaintenanceDocument-parentBean"
          abstract="true" parent="MaintenanceDocumentEntry">
        <property name="businessObjectClass"
                  value="org.kuali.kfs.module.ar.businessobject.BillingFrequency"/>
        <property name="maintainableClass"
                  value="org.kuali.kfs.sys.document.FinancialSystemMaintainable"/>
        <property name="maintainableSections">
            <list>
                <ref bean="BillingFrequencyMaintenanceDocument-EditBillingFrequency"/>
            </list>
        </property>
        <property name="lockingKeys">
            <list>
                <value>frequency</value>
            </list>
        </property>
        <property name="documentTypeName" value="BILF"/>
        <property name="documentAuthorizerClass"
                  value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase"/>
        <property name="workflowAttributes">
            <ref bean="BillingFrequencyMaintenanceDocument-workflowAttributes"/>
        </property>
        <property name="allowsNewOrCopy" value="false"/>
    </bean>

    <!-- Maintenance Section Definitions -->

    <bean id="BillingFrequencyMaintenanceDocument-EditBillingFrequency"
          parent="BillingFrequencyMaintenanceDocument-EditBillingFrequency-parentBean"/>

    <bean
            id="BillingFrequencyMaintenanceDocument-EditBillingFrequency-parentBean"
            abstract="true" parent="MaintainableSectionDefinition">
        <property name="id" value="Edit Billing Frequency"/>
        <property name="title" value="Edit Billing Frequency"/>
        <property name="maintainableItems">
            <list>
                <bean parent="MaintainableFieldDefinition" p:name="frequency"
                      p:required="true"/>
                <bean parent="MaintainableFieldDefinition" p:name="frequencyDescription"
                      p:required="true"/>
                <bean parent="MaintainableFieldDefinition" p:name="gracePeriodDays"
                      p:required="true" p:defaultValue="0"/>
                <bean parent="MaintainableFieldDefinition" p:name="active"
                      p:defaultValue="true"/>
            </list>
        </property>
    </bean>

    <!-- workflow attributes -->
    <bean id="BillingFrequencyMaintenanceDocument-workflowAttributes"
          parent="BillingFrequencyMaintenanceDocument-workflowAttributes-parentBean"/>

    <bean
            id="BillingFrequencyMaintenanceDocument-workflowAttributes-parentBean"
            class="org.kuali.kfs.krad.datadictionary.WorkflowAttributes" abstract="true"/>
</beans>
