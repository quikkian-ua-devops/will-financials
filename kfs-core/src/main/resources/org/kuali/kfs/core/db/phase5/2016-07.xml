        </update>
        <update tableName="KRCR_PARM_T">
            <column name="CMPNT_CD">CorporateCardApplication</column>
            <where>cmpnt_cd = 'TemCorporateCardApplication'</where>
        </update>
    </changeSet>
</databaseChangeLog>
