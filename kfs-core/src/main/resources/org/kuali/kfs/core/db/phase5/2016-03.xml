<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="KFS601" id="FINI-1383_CREATE_KRNS_PESSIMISTIC_LOCK_T" context="bootstrap,demo,unit">
        <addColumn tableName="KRNS_PESSIMISTIC_LOCK_T">
            <column name="SESN_ID" type="VARCHAR(40)" defaultValue="undefined"/>
        </addColumn>

        <update tableName="KRNS_PESSIMISTIC_LOCK_T">
            <column name="SESN_ID"><![CDATA['undefined']]></column>
            <where>SESN_ID IS NULL OR SESN_ID = ''</where>
        </update>
    </changeSet>

    <changeSet author="KFS601" id="FINI-1383_CREATE_KRAD_MSG_T" context="bootstrap,demo,unit">
        <createTable tableName="krad_msg_t">
            <column name="nmspc_cd" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="cmpnt_cd" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="msg_key" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="loc" type="VARCHAR(80)">
                <constraints nullable="false"/>
            </column>
            <column name="obj_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="ver_nbr" type="DECIMAL(8)" defaultValueNumeric="1">
                <constraints nullable="false"/>
            </column>
            <column name="msg_desc" type="VARCHAR(255)"/>
            <column name="txt" type="VARCHAR(4000)"/>
        </createTable>

        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB DEFAULT CHARSET=UTF8 COLLATE=utf8_bin"/>
        </modifySql>
    </changeSet>

    <changeSet author="KFS601" id="FINI-1383_PK_KRAD_MSG_T" context="bootstrap,demo,unit">
        <addPrimaryKey columnNames="nmspc_cd,cmpnt_cd,msg_key,loc" constraintName="PKkrad_msg_t" tableName="krad_msg_t"/>
    </changeSet>

    <changeSet author="KFS601" id="FINI-1383_CONSTRAINT_KRAD_MSG_T" context="bootstrap,demo,unit">
        <addUniqueConstraint tableName="krad_msg_t" columnNames="obj_id" constraintName="krad_msg_tc0"/>
    </changeSet>

    <changeSet author="KFS601" id="FINI-1383_CREATE_KRNS_ATT_CNTNT_T" context="bootstrap,demo,unit">
        <createTable tableName="krns_att_cntnt_t">
            <column name="att_id" type="VARCHAR(36)"/>
            <column name="att_cntnt" type="BLOB"/>
        </createTable>
    </changeSet>
</databaseChangeLog>